<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- mapper 中的 namespace 配置 带有@Mapper 注解的接口 -->
<mapper namespace="com.ssm.xingxingsystem.dao.RechargeDao">
    <resultMap id="rechargeMap" type="com.ssm.xingxingsystem.bean.Recharge">
        <id column="id" property="id" jdbcType="INTEGER"/>
        <result column="user_id" property="userId" jdbcType="INTEGER"/>
        <result column="recharge_amount" property="rechargeAmonunt" jdbcType="DOUBLE"/>
        <result column="recharge_time" property="rechargeTime" jdbcType="VARCHAR"/>
    </resultMap>

</mapper>